{{#if isGameWin}}
<img src="assets/images/win.png" style="left:150px;position:absolute;z-index:10;">
<img src="assets/images/play-again.png" style="left:650px;top:550px;position:absolute;z-index:20;" {{action "newGame" on="click" }}>
{{/if}}
{{#if isGameLoss}}
<img src="assets/images/lose.png" style="left:150px;position:absolute;z-index:10;">
<img src="assets/images/play-again.png" style="left:650px;top:550px;position:absolute;z-index:20;" {{action "newGame" on="click" }}>
{{/if}}


<div class='row after'>

  <div class='col-md-12 text-center site-logo'>
    <img src="assets/images/out_of_the_water_logo.png">
  </div>

  {{outlet}}
  <div class="col-md-6">
    <table border="3px" border-color="white" background="assets/images/ocean-background.jpg" class="table-left">
      {{#each coordsArray as |innerArray|}}
      <tr>
        {{#each innerArray as |coord|}}
        
        <td style="width:50px;height:50px;">
          {{{ships-and-shots coord model=model player="1" showShip=true}}}
        </td>

        {{/each}}
      </tr>
      {{/each}}
    </table>
  </div>
  
  <div class="col-md-6">
    <table border="3px" border-color="white" background="assets/images/ocean-background.jpg" class="table-right">
      {{#each coordsArray as |innerArray|}}
      <tr>
        {{#each innerArray as |coord|}}

        <td style="width:50px;height:50px;"{{action "makeHit" coord on="click" }}>
          {{{ships-and-shots coord model=model player="2" showShip=false}}}
        </td>

        {{/each}}
      </tr>
      {{/each}}
    </table>
  </div>
</div>